{
  "expo": {
    "name": "exif-cleaner",
    "slug": "exif-cleaner",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.antigravity.exifcleaner",
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "blockedPermissions": [
        "RECORD_AUDIO",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "SYSTEM_ALERT_WINDOW",
        "READ_MEDIA_AUDIO",
        "CAMERA",
        "ACCESS_MEDIA_LOCATION"
      ]
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you select them for Exif removal."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "The app saves the cleaned photos to your gallery.",
          "savePhotosPermission": "The app saves the cleaned photos to your gallery.",
          "isAccessMediaLocationEnabled": false
        }
      ],
      "expo-localization"
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "79fe8d6c-ee7e-4f86-8f5c-762ae36d1dbe"
      }
    }
  }
}